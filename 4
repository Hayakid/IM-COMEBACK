void task_14()
{
    int a,b,c,d;
    cout << "Введите четырехзначное число ->" << endl;
    for (int i = 0; i < 4; ++i) {
        if (i < 3) {
            cin >> a >> b >> c >> d;
            cout << b << a << d << c;
        }
        else if (i >3)
             { cout << "Ошибка" << endl; break; }
    }
}
