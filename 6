#include <iostream>
#include <clocale>
using namespace std;
void main()
{
setlocale (LC_CTYPE,"rus");
int i, a, sum=0;
cout<<"Введите начальное значение от 1 до 500: ";
cin>>a;
i=a;
for (;i<=500;i++, a++)
{sum=sum+a;
cout<<sum<<"\n";}
}
